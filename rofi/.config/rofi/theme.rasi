* {
  font:   "JetBrainsMono Nerd Font Mono 12";
  
  bg0     : #1a1b26;
  bg1     : #1f2335;
  bg2     : #24283b;
  bg3     : #414868;
  fg0     : #c0caf5;
  fg1     : #a9b1d6;
  fg2     : #737aa2;
  red     : #171515ff;
  green   : #9ece6a;
  yellow  : #e0af68;
  blue    : #7aa2f7;
  magenta : #9a7ecc;
  cyan    : #4abaaf;

  accent: @red;
  urgent: @yellow;

  background-color : transparent;
  text-color       : @fg0;

  margin  : 0;
  padding : 0;
  spacing : 0;
}

element-icon, element-text, scrollbar {
  cursor: pointer;
}

prompt {
  width: 100%;
  padding: 5px 10px;
  border-radius: 0px;
}

window {
    location : north;
    width    : 500px;
    x-offset : 4px;
    y-offset : 20px;
    background-color: rgba(28, 30, 36, 0.95);
    border: 1px;
    border-color: @bg3;
    border-radius: 6px;
    children: [ headerbar, inputbar, listview ];
}

headerbar {
  orientation: horizontal;
  children: [ icon-search, prompt ];
  expand: false;
  background-color: @bg0;
  padding: 4px 10px;
  margin: 0px;
}

inputbar {
  spacing  : 15px;
  padding  : 4px 10px;
  children : [ entry];
  background-color: @bg0;
}

icon-search, entry, element-icon, element-text {
  vertical-align: 0.5;
}

entry {
  placeholder: "Search...";
}

icon-search {
  text-color: @fg0;
  expand   : false;
  filename : "~/.config/rofi/icons/thunder.svg";
  size     : 14px;
}

textbox {
  padding          : 4px 8px;
  // background-color : @bg2;
}

listview {
  padding      : 4px 0px;
  lines        : 12;
  columns      : 1;
  scrollbar    : true;
  fixed-height : false;
  dynamic      : true;
}

element {
  padding : 8px 10px;
  spacing : 8px;
}

element normal urgent {
  text-color: @urgent;
}

element normal active {
  text-color: @accent;
}

element alternate active {
  text-color: @accent;
}

element selected {
  // text-color       : @bg1;
  background-color : @accent;
}

element selected urgent {
  background-color: @urgent;
}

element-icon {
  size: 0.8em;
}

element-text {
  text-color: inherit;
}

scrollbar {
  handle-width : 4px;
  handle-color : @fg2;
  padding      : 0 4px;
}
